# --- vSphere credentials ---
vsphere_server   = "vcenter.local"
vsphere_user     = "administrator@vsphere.local"
vsphere_password = "YourPasswordHere"

# --- Environment info ---
datacenter = "Datacenter01"
cluster    = "Cluster01"
datastore  = "SharedDatastore"
network    = "VM Network"
folder     = "Terraform-VMs"

# --- Template name ---
template_name = "ubuntu-22-template"

# --- Default SSH for netplan updates ---
ssh_user        = "ubuntu"
ssh_private_key = file("~/.ssh/id_rsa")

# --- VM definitions ---
vms = {
  web01 = {
    name      = "web01"
    cpu       = 2
    memory_mb = 4096
    disk_gb   = 40
    domain    = "example.local"
    dns       = ["10.10.20.10", "10.10.20.11"]

    new_ipv4_address = "10.10.20.52"
    new_ipv4_prefix  = 24
    new_ipv4_gateway = "10.10.20.1"
  }

  db01 = {
    name      = "db01"
    cpu       = 4
    memory_mb = 8192
    disk_gb   = 100
    datastore = "FastTierDatastore"

    netplan_interface = "ens192"
    new_ipv4_address  = "10.10.20.53"
    new_ipv4_prefix   = 24
    new_ipv4_gateway  = "10.10.20.1"
    ssh_user          = "admin"
    ssh_private_key   = file("~/.ssh/id_rsa_db")
  }
}
